@startuml VerificaTriangulo
start

:Mostrar "Olá! Insira 3 valores numéricos para verificar se formam um triângulo.";
:Mostrar "1- ";
:Leia lado1;
:Mostrar "2- ";
:Leia lado2;
:Mostrar "3- ";
:Leia lado3;

if (lado1 >= lado2 + lado3 ou lado2 >= lado1 + lado3 ou lado3 >= lado1 + lado2?) then (Sim)
  :Mostrar "Não é possível realizar um triângulo com os lados inseridos.";
else
  :Mostrar "Ok, é possível formar um triângulo com esses valores!";
endif

stop
@enduml
