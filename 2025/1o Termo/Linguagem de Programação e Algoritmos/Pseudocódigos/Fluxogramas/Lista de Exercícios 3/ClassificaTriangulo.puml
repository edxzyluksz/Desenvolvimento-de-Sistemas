@startuml ClassificaTriangulo
start

:faca {
    :Mostrar "Digite 3 lados de um triângulo:";
    :Leia lado1;
    :Leia lado2;
    :Leia lado3;

    if (lado1 <= 0 ou lado2 <= 0 ou lado3 <= 0) then (Sim)
        :Mostrar "Um ou mais dos lados inseridos possuem valores negativos. Digite todos novamente.";
    elseif (lado1 >= lado2 + lado3 ou lado2 >= lado1 + lado3 ou lado3 >= lado1 + lado2) then (Sim)
        :Mostrar "Não é possível formar um triângulo com esses valores.";
    endif
} while (lado1 <= 0 ou lado2 <= 0 ou lado3 <= 0 ou lado1 >= lado2 + lado3 ou lado2 >= lado1 + lado3 ou lado3 >= lado1 + lado2)

if (lado1 == lado2 e lado2 == lado3?) then (Sim)
    :Mostrar "Seu triângulo é equilátero.";
elseif (lado1 == lado2 ou lado2 == lado3 ou lado1 == lado3?) then (Sim)
    :Mostrar "Seu triângulo é isósceles.";
else
    :Mostrar "Seu triângulo é escaleno.";
endif

stop
@enduml
